<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.example.dell.litepaltest.Register">

    <TextView
        android:id="@+id/TextView_register_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="31dp"
        android:text="用户名："/>

    <EditText
        android:id="@+id/EditText_register_uname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_toRightOf="@id/TextView_register_userName"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/TextView_register_userPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_register_userName"
        android:textSize="31dp"
        android:text="密    码："/>

    <EditText
        android:id="@+id/EditText_register_upwd"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_toRightOf="@id/TextView_register_userPwd"
        android:layout_below="@id/EditText_register_uname"
        android:layout_alignTop="@id/TextView_register_userPwd"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/TextView_register_uPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_register_userPwd"
        android:textSize="31dp"
        android:text="手机号："/>

    <EditText
        android:id="@+id/EditText_register_uphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_toRightOf="@id/TextView_register_uPhone"
        android:layout_below="@id/EditText_register_upwd"
        android:layout_alignTop="@id/TextView_register_uPhone"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/TextView_register_uAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_register_uPhone"
        android:textSize="31dp"
        android:text="地    址："/>

    <EditText
        android:id="@+id/EditText_register_uaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_toRightOf="@id/TextView_register_uAddress"
        android:layout_below="@id/EditText_register_uphone"
        android:layout_alignTop="@id/TextView_register_uAddress"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/Button_user_register_sql"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_register_uAddress"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:text="注册"/>

</RelativeLayout>
